---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

type Frontmatter = {
    title: string;
    description: string;
    tags?: string[];
}

const posts = await Astro.glob<Frontmatter>('./posts/*.md');

console.log(posts)

const colors = [
    "b-3 b-primary text-primary",
    "b-3 b-secondary text-secondary",
    "b-3 b-light-primary text-light-primary",
];

---
<Layout>
    <div class="w-100% flex justify-center p-8 box-border">
        <div class="flex items-stretch flex-col gap-32px max-w-1000px">
            <h1 class="text-4xl font-bold">Blog Posts</h1>
            {posts.map(post => (
                <Card>
                    <div class="flex flex-col gap-16px">
                        <div class="flex gap-24px justify-start">
                            <div class="flex-1 flex flex-col gap-8px">
                                <a href={post.url}><h2 class="text-2xl font-bold">{post.frontmatter.title}</h2></a>
                                <div class="flex gap-8px">
                                    {(post.frontmatter.tags ?? []).map((tag, index) => (
                                        <div class:list={[colors[index % colors.length], "inline-flex px-8px py-4px rounded-xl"]}>
                                            <p>{tag}</p>
                                        </div>
                                    ))}
                                </div>
                            </div>
                            <h2 class="gradient-p text-2xl font-bold">#1</h2>
                        </div>
                        <p>{post.frontmatter.description}</p>
                    </div>
                </Card>
            ))}
        </div>
    </div>
</Layout>
