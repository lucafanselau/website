---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

type Frontmatter = {
    title: string;
    description: string;
    tags?: string[];
};

const posts = await Astro.glob<Frontmatter>("./posts/*.md");

const colors = [
    "border-[2px] border-green text-green",
    "border-[2px] border-yellow text-yellow",
    "border-[2px] border-light-green text-light-green",
];
---

<Layout title="Blog | guythat.codes">
    <Header path="/blog" />

    <div class="container relative mx-auto py-4 flex-1 h-full flex flex-col p-1">
        <div class="flex flex-col space-y-4 items-center md:items-start pt-8">
            <h1 class="font-bold text-3xl">Blog Posts</h1>
            {posts.map(post => (
                <div class="bg-kinda-white dark:bg-dark p-4 border-[3px] border-darker dark:border-kinda-white rounded-2xl shadow-solid shadow-darker/25 dark:shadow-kinda-white/25">
                    <div class="flex flex-col space-y-3">
                        <div class="flex space-x-6 justify-start">
								<div class="flex-1 flex flex-col space-y-2">
									<a href={post.url}>
										<h2 class="text-2xl font-bold">{post.frontmatter.title}</h2>
									</a>
									<div class="flex space-x-2">
										{(post.frontmatter.tags ?? []).map((tag, index) => (
											<div class:list={[colors[index % colors.length], "inline-flex px-[6px] py-[2px] rounded-xl"]}>
												<p class="text-md font-bold">{tag}</p>
											</div>
										))}
									</div>
							</div>
                            <h2 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green to-yellow">#1</h2>
                        </div>
                        <p class="text-lg">{post.frontmatter.description}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>
